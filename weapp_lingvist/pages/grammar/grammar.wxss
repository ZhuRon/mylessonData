body{
    margin: 0;
    padding: 0;
    position: relative;
}
.center{
    text-align: center;
}
.title_hd{
    font-weight: bold;
}
/*
1.横向排列分页标签
2.每个分页标签各占1/3
*/
.tapNav {
    display: flex;
    flex-direction: row;
  }
  .tapNav view{
    flex:1;
    width:200rpx;
    height:100rpx;
    text-align: center;
    line-height: 100rpx;
    font-family: "微软雅黑";
  }
  /*选中样式*/
  .tapNav .active {
    color:blue;
    border-bottom:4rpx solid mediumseagreen;
  }
  #swiper {
    margin-top:40rpx;
    height: 100vh;
  }
  .swiper-content{
    width: 100%;
    height: 150rpx;
  }
  .content{
    line-height: 150rpx;
    text-align: left;
    padding-left: 10rpx;
    border-bottom: 2rpx solid black;
  }

